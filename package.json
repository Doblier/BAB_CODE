{
  "name": "electron-vite-react",
  "version": "0.1.0",
  "main": "dist-electron/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:compile && concurrently -k -r \"npm:dev:watch\" \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:compile": "tsc -p tsconfig.json --outDir dist-electron",
    "dev:watch": "tsc -p tsconfig.json --outDir dist-electron --watch",
    "dev:electron": "wait-on http://localhost:5173 --timeout 10000 && cross-env NODE_ENV=development electron .",
    "postinstall": "electron-rebuild -f -w node-pty || echo \"skip rebuild if not installed\"",
    "build": "vite build && tsc -p tsconfig.json --project tsconfig.json --outDir dist-electron && electron-builder",
    "pack": "vite build && tsc -p tsconfig.json --outDir dist-electron",
    "start": "electron ."
  },
  "build": {
    "appId": "com.example.app",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "electron-builder.yml"
    ],
    "extraMetadata": {
      "main": "dist-electron/electron/main.js"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${name}-${version}-win.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${name}-${version}-mac.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${name}-${version}-linux.${ext}"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/prismjs": "^1.26.5",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "child_process": "^1.0.2",
    "node-pty": "^1.0.0",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  }
}
