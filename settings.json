{
  "editor": {
    "theme": "dark",
    "fontSize": 14,
    "fontFamily": "\"Cascadia Code\", \"Fira Code\", \"JetBrains Mono\", \"Consolas\", monospace",
    "tabSize": 4,
    "insertSpaces": true,
    "wordWrap": "on",
    "lineNumbers": "on",
    "minimap": {
      "enabled": true,
      "side": "right"
    },
    "autoSave": true,
    "formatOnSave": false
  },
  "terminal": {
    "defaultShell": "wsl",
    "fontSize": 14,
    "fontFamily": "\"Cascadia Code\", \"Fira Code\", \"JetBrains Mono\", \"Consolas\", monospace",
    "theme": "light",
    "cursorStyle": "block",
    "cursorBlink": true,
    "scrollback": 10000,
    "copyOnSelect": false,
    "pasteOnRightClick": true,
    "confirmOnExit": true,
    "rendererType": "canvas",
    "enableGpu": true,
    "scrollSensitivity": 1,
    "enableBell": false,
    "bellStyle": "none",
    "shellArgs": {
      "powershell": [
        "-NoExit",
        "-NoLogo",
        "-ExecutionPolicy",
        "Bypass"
      ],
      "pwsh": [
        "-NoExit",
        "-NoLogo"
      ],
      "cmd": [
        "/Q",
        "/K"
      ],
      "bash": [
        "--login",
        "-i"
      ],
      "zsh": [
        "-i"
      ],
      "fish": [
        "-i"
      ]
    },
    "fastScrollModifier": "alt",
    "environmentVariables": {},
    "startupDirectory": ""
  },
  "ai": {
    "defaultModel": "gpt-3.5-turbo",
    "apiEndpoint": "http://localhost:5000",
    "maxTokens": 2048,
    "temperature": 0.7,
    "enableAutoComplete": true,
    "enableCodeGeneration": true
  },
  "layout": {
    "sidebarWidth": 250,
    "terminalHeight": 300,
    "assistantWidth": 360,
    "showSidebar": true,
    "showTerminal": true,
    "showAssistant": false
  },
  "appearance": {
    "colorScheme": "dark",
    "accentColor": "#007acc",
    "borderRadius": 6,
    "animations": true,
    "theme": "dark-plus"
  },
  "privacy": {
    "dataSharing": true,
    "telemetry": false,
    "crashReports": true
  },
  "notifications": {
    "systemNotifications": true,
    "soundNotifications": false,
    "updateNotifications": true
  }
}